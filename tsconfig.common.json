{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2021",
    "sourceMap": true,
    "declaration": true,

    "incremental": true,
    "skipLibCheck": true,
    "removeComments": true,

    "composite": true,
    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": []
}
